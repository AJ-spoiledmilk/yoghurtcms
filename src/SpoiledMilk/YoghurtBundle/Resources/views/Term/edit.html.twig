{% extends 'SpoiledMilkYoghurtBundle::layout.html.twig' %}

{% block title %}
 :: Edit Term
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>Edit Term<small> | {{ term.term }}</small></h1>
</div>

<div class="container-fluid">
    <div class="row-fluid">

        <div class="span12">
            <form action="{{ path('yoghurt_term_update', { 'id': term.id }) }}"
                method="post"
                novalidate="novalidate"
                {{ form_enctype(edit_form) }}>

                {{ form_widget(edit_form) }}

                <div class="form-actions">
                    <a href="{{ path('yoghurt_vocabulary_edit', {'id': term.vocabulary.id }) }}"
                       class="btn"
                       title="Abandon changes and go back to Vocabulary">
                        <i class="icon-arrow-left"></i> Back to vocabulary
                    </a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>

    </div>
</div>
 
{% endblock %}